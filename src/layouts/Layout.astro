---
import '../styles/global.css';

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Jonathan | AI-Augmented Development",
  description = "Ship faster, ship better. Web development, AI integration, automation, and data visualization."
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="bg-slate-950 text-slate-200 font-sans antialiased">
    <nav class="fixed top-0 w-full z-50 bg-slate-950/80 backdrop-blur-md border-b border-slate-800">
      <div class="max-w-5xl mx-auto px-6 py-4 flex justify-between items-center">
        <a href="#" class="text-lg font-semibold text-white">Jonathan</a>
        <div class="hidden sm:flex gap-6 text-sm text-slate-400">
          <a href="#services" class="hover:text-white transition-colors">Services</a>
          <a href="#work" class="hover:text-white transition-colors">Work</a>
          <a href="#about" class="hover:text-white transition-colors">About</a>
          <a href="#contact" class="hover:text-white transition-colors">Contact</a>
        </div>
      </div>
    </nav>
    <slot />
  </body>
</html>
