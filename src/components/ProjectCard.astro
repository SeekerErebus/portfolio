---
import type { Project } from '../data/projects';

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<div class="card-glow group bg-slate-900/60 border border-slate-800/80 rounded-2xl overflow-hidden backdrop-blur-sm" data-category={project.category}>
  <!-- Screenshot -->
  <div class="aspect-video bg-gradient-to-br from-slate-800/80 to-slate-900 relative overflow-hidden">
    <img
      src={project.screenshot}
      alt={`${project.name} screenshot`}
      class="w-full h-full object-cover object-top transition-transform duration-500 group-hover:scale-105"
      loading="lazy"
    />
  </div>

  <!-- Content -->
  <div class="p-6">
    <h3 class="text-white font-semibold mb-1 tracking-tight group-hover:text-blue-400 transition-colors duration-200">
      {project.name}
    </h3>
    <p class="text-slate-500 text-xs font-medium mb-3">{project.tagline}</p>
    <p class="text-slate-400 text-sm leading-relaxed mb-4">{project.description}</p>

    <!-- Tags -->
    <div class="flex flex-wrap gap-2 mb-5">
      {project.tags.map((tag) => (
        <span class="tech-tag text-[11px] font-medium bg-slate-800/80 text-slate-400 px-2.5 py-1 rounded-md border border-slate-700/50">
          {tag}
        </span>
      ))}
    </div>

    <!-- CTAs -->
    <div class="flex gap-3">
      <a
        href={project.demoUrl}
        target="_blank"
        rel="noopener"
        class="btn-primary inline-flex items-center gap-1.5 bg-blue-600 hover:bg-blue-500 text-white text-xs font-semibold px-4 py-2 rounded-lg"
      >
        Live Demo
        <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2.5">
          <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 6H5.25A2.25 2.25 0 003 8.25v10.5A2.25 2.25 0 005.25 21h10.5A2.25 2.25 0 0018 18.75V10.5m-10.5 6L21 3m0 0h-5.25M21 3v5.25" />
        </svg>
      </a>
      <a
        href={project.repoUrl}
        target="_blank"
        rel="noopener"
        class="btn-secondary inline-flex items-center gap-1.5 border border-slate-700/80 hover:border-slate-500 text-slate-300 text-xs font-semibold px-4 py-2 rounded-lg"
      >
        Source
        <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
        </svg>
      </a>
    </div>
  </div>
</div>
